<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <h1>Name And Gender</h1>
      <form class="form-horizontal" role="form" action="/search" method="get">
        <div class="row">
          <div class="col-6">
            Name: <input type="text" name="name">
          </div>
          <div class="col-6">
            Gender:
            <select name="gender">
              <option value=>not specified</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </div>
        </div>
        <div class="row">
          <h2>Minimum PowerStats</h2>
          <div class="col-2">
            intelligence<input type="text" name="mInt">
          </div>
          <div class="col-2">
            strength<input type="text" name="mStr">
          </div>
          <div class="col-2">
            speed<input type="text" name="mSpd">
          </div>
          <div class="col-2">
            durability<input type="text" name="mDur">
          </div>
          <div class="col-2">
            power<input type="text" name="mPow">
          </div>
          <div class="col-2">
            combat<input type="text" name="mCbt">
          </div>
        </div>
        <br>
        <div class="form-group">
          <input type="hidden" name="searchOn" value=1>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>
    
    {{#if isRendered}}
    <!--显示页标-->
    <div class="row">
      <div class="col-6">
        <h4>Total Page: {{pagination.pageCount}}</h4>
      </div>
      <div class="col-6">
        <h4>Current Page: {{pagination.page}}</h4>
      </div>
    </div>
    <!--显示页标结束-->
    <div class="container">
      {{!--
      {{#each pagination}}
        {{@key}}:{{.}}
      {{/each}}
      <h1>{{pagination.page}}</h1>
      --}}
      {{#each data}}
      <br>
      <div class="row">
        <div class="col-3">
          <img src={{images.sm}} alt="No image">
          <a href=/hero/{{_id}}>{{name}}</a>
        </div>
        <div class="col-3">
          <ul>
            Publisher
            <li>{{biography.publisher}}</li>
          </ul>
          <ul>
            Full name
            <li>{{biography.fullName}}</li>
          </ul>
          <ul>
            Occupation
            <li>{{work.occupation}}</li>
          </ul>
        </div>
        <div class="col-3">
          <ul>
            Power stats
            {{#each powerstats}}
             <li>{{@key}}: {{.}}</li>
            {{/each}}
          </ul>
        </div>
        <div class="col-3">
          <ul>
            Appearance
            {{#each appearance}}
            <li>{{@key}}: {{.}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      {{/each}}
      <div class="row">
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <a class="page-link" href={{thisUrl}}&page=1>First Page</a>
            </li>
            <li class="page-item">
              <a class="page-link" href={{thisUrl}}&page={{pagination.previousPageIndex}}>Previous Page</a>
            </li>
            <li class="page-item">
              <a class="page-link" href={{thisUrl}}&page={{pagination.nextPageIndex}}>Next Page</a>
            </li>
            <li class="page-item">
              <a class="page-link" href={{thisUrl}}&page={{pagination.pageCount}}>Last Page</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>